// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Parent {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  password  String
  children  Child[]
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Child {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  email      String @unique
  password   String

  parentId   String
  parent     Parent @relation(fields: [parentId], references: [id])

  locationLog     ChildLocationLog[]
  currentLocation ChildCurrentLocation?

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model ChildCurrentLocation {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  latitude  Float
  longitude Float

  childId String @unique
  child   Child? @relation(fields: [childId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model ChildLocationLog {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  latitude  Float
  longitude Float

  childId String
  child   Child  @relation(fields: [childId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model PasswordResetRequest {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model OTP {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  userId    String
  otp       String
  otpReason OTPReason @default(Registration)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now())
}

enum OTPReason {
  PasswordResetRequest
  Registration
}
